# Supabase (client)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
NEXT_PUBLIC_SUPABASE_STORAGE_BUCKET=ux-audit
NEXT_PUBLIC_BRAND_LOGO_PATH=branding/logo.png
NEXT_PUBLIC_DEMO_MODE=

# Supabase (server)
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_STORAGE_BUCKET=ux-audit

# AI provider (Gemini)
GEMINI_URL=https://generativelanguage.googleapis.com/v1beta/models
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Optional legacy AI_* fallback (used if GEMINI_* is not set)
AI_API_URL=
AI_API_KEY=
AI_MODEL=

# Mock mode (true/false) - when true, skip AI call and return deterministic mock
AI_MOCK_MODE=true

# Optional: local Chrome path for Puppeteer (useful for dev on Windows/macOS)
PUPPETEER_EXECUTABLE_PATH=
CHROME_EXECUTABLE_PATH=

# Optional: remote worker for URL audits when Chromium is unavailable
AUDIT_WORKER_URL=
# Optional: auto | chromium | worker
AUDIT_STRATEGY=auto
